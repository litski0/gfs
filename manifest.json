{
  "name": "GetFriendsSubmission",
  "description": "Get Your Friends' Accepted Submission on a Particular Problem on Codeforces",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://codeforces.com/problemset/problem/*/*"
      ]
    }
  ],
  "options_page":"options.html",
  "permissions":[
    "storage"
  ],
  "icons": {
  "16": "icons/icon16.png",
  "32": "icons/icon32.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
}

}
